@model AssetHub.ViewModels.Room.ViewRoomViewModel

@{
    ViewBag.Title = "Room: " + Model.Name;
}

<h4>@Model.Name</h4> <hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @if (Model.CurrentUsers.Count > 0)
    {
        <h4>Users</h4> <hr />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.CurrentUsers)
                {
                    <tr onclick="location.href = '@Url.Action("ViewUser", "Account", new { id = u.Id })'">
                        <td>@u.FirstName @u.LastName</td>
                        <td>@Html.ActionLink("View", "ViewUser", "Account", new { id = u.Id }, new { @class = "btn btn-default" })</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (Model.CurrentAssets.Count > 0)
    {
        <h4>Assets</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Serial number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.CurrentAssets)
                {
                    <tr onclick="location.href = @Url.Action("ViewAsset", "Asset", new { id = a.Id})'">
                        <td>@a.Name</td>
                        <td>@a.SerialNumber</td>
                        <td>@Html.ActionLink("View", "ViewAsset", "Asset", new { id = a.Id }, new { @class = "btn btn-default" })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>