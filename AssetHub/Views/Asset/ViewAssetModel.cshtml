@model AssetHub.ViewModels.AssetModelVMs.ViewAssetModelViewModel

@{
    ViewBag.Title = "ViewAssetModel";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.ActionLink(@Model.Category.Name, "ViewAssetModelCategory", new { Model.Category.Id })
        </dd>
    </dl>

    <h4>Properties of @Model.Name</h4> <hr />
    <dl class="dl-horizontal">
        @foreach(var prop in Model.Properties)
        {
            <dt>
                @Html.DisplayName(prop.Name)
            </dt>

            <dd>
                @Html.ActionLink("View property", "ViewAssetModelProperty", prop.Id)
            </dd>
        }
    </dl>

    @if (Model.Assets.Count > 0)
    {
        <h4>Assets of @Model.Name</h4><hr />
        <dl class="dl-horizontal">
            @foreach (var asset in Model.Assets)
                {
                <dt>
                    @Html.DisplayName(asset.Name)
                </dt>

                <dd>
                     @Html.ActionLink("View asset", "ViewAsset", new { asset.Id })
                </dd>
            }
        </dl>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
