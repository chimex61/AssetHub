@model AssetHub.ViewModels.Category.IndexViewModel

@{
    ViewBag.Title = "Categories";
}

<div class="row">
    <div class="col-sm-2">
        <h4>Actions</h4> <hr />
        @Html.ActionLink("Add category", "AddCategory", "Category", htmlAttributes: new { @class = "btn btn-default" })
    </div>
    <div class="col-sm-10">
        <h4>Search</h4> <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "searchName" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Search" class="btn btn-default" id="searchBtn"/>
                    </div>
                </div>
            </div>
        }
        @if( Model.Categories.Count > 0)
        {
            <h4>Categories</h4> <hr />
            <table class="table table-hover" id="resultsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Asset models</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var c in Model.Categories)
                    {
                        <tr onclick ="location.href = '@Url.Action("ViewCategory", "Category", new { id = c.Id })'">
                            <td>@c.Name</td>
                            <td>@c.AssetModels.Count</td>
                            <td>@Html.ActionLink("View", "ViewCategory", "Category", new { id = c.Id }, htmlAttributes: new { @class = "btn btn-default" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Category/Category.js")
}