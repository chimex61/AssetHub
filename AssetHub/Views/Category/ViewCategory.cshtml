@model AssetHub.ViewModels.Category.ViewCategoryViewModel

@{
    ViewBag.Title = "ViewCatergoryViewModel";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @if (Model.AssetModels.Count > 0)
    {
        <h4>Asset models</h4> <hr />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.AssetModels)
                {
                    <tr onclick="location.href = '@Url.Action("ViewAssetModel", "AssetModel", new { id = c.Id })'">
                        <td>@c.Name</td>
                        <td>@Html.ActionLink("View", "ViewAssetModel", "AssetModel", htmlAttributes: new { @class = "btn btn-default" })</td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
