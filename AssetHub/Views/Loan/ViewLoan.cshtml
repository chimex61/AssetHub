@model AssetHub.ViewModels.Loan.ViewLoanViewModel

@{
    ViewBag.Title = "View loan";
}

<div class="row">
    <div class="col-sm-2">
        <h4>Actions</h4> <hr />
        @Html.ActionLink("Return", "ReturnLoan", new { id = Model.Id }, new { @class = "btn btn-default", type = "button" })
    </div>

    <div class="col-sm-10">
        <h4>Loan</h4> <hr />
        <div class="container" id="viewContainer">
            <div class="row">
                <div class="col-sm-10">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Asset)
                        </dt>

                        <dd>
                            @Html.ActionLink(Model.Asset.Name, "ViewAsset", "Asset", new { id = Model.Asset.Id }, new { })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TimeFrom)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TimeFrom)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TimeTo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TimeTo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Room)
                        </dt>

                        <dd>
                            @Html.ActionLink(Model.Room.Name, "ViewRoom", "Room", new { id = Model.Room.Id }, new { })
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
