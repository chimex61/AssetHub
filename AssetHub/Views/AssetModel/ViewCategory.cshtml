@model AssetHub.ViewModels.AssetModelVMs.ViewCategoryViewModel

@{
    ViewBag.Title = "ViewCatergoryViewModel";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <h4>Asset models in @Model.Name</h4> <hr />
    <dl class="dl-horizontal">
        @foreach (var am in Model.AssetModels)
        {
            <dt>
                @Html.DisplayName(am.Name)
            </dt>

            <dd>
                @Html.ActionLink("View asset model", "ViewAssetModel", new { am.Id })
            </dd>
        }
    </dl>
</div>
