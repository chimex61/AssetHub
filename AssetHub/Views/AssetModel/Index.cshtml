@model AssetHub.ViewModels.AssetModel.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-2">
        <h4>Actions</h4> <hr />
        @Html.ActionLink("Add asset model", "AddAssetModel", "AssetModel", htmlAttributes: new { @class = "btn btn-default" })
    </div>
    <div class="col-sm-10">
        <h4>Search</h4> <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SelectedCategoryId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SelectedCategoryId, Model.Categories, htmlAttributes: new { @class = "form-control", @id = "categorySelector" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        @if (Model.AssetModels.Count > 0)
        {
            <h4>Asset models</h4> <hr />
            <table class="table table-hover" id="resultsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Assets</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.AssetModels)
                    {
                        <tr onclick="location.href = '@Url.Action("ViewAssetModel", "AssetModel", new { id = c.Id })'">
                            <td>@c.Name</td>
                            <td>@c.AssetModelCategory.Name</td>
                            <td>@c.Assets.Count</td>
                            <td>@Html.ActionLink("View", "ViewAssetModel", "AssetModel", new { id = c.Id }, htmlAttributes: new { @class = "btn btn-default" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>